{
  "name": "psf-multisig-approval",
  "version": "2.0.1",
  "description": "Utility library implementing the PS009 specification",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "npm run lint && TEST=unit nyc mocha test/unit/",
    "test:integration": "mocha --timeout 120000 test/integration/",
    "lint": "standard --env mocha --fix",
    "docs": "./node_modules/.bin/apidoc -i src/ -o docs",
    "coverage:report": "nyc --reporter=html mocha test/unit/ --exit"
  },
  "keywords": [
    "bitcoin",
    "bitcoin cash",
    "wallet",
    "javascript",
    "cryptocurrency",
    "react",
    "front end",
    "client",
    "apidoc",
    "slp",
    "tokens"
  ],
  "author": "Chris Troutner <chris.troutner@gmail.com>",
  "license": "MIT",
  "apidoc": {
    "title": "@psf/multisig-approval",
    "url": "localhost:5000"
  },
  "repository": "Permissionless-Software-Foundation/psf-multisig-approval",
  "dependencies": {
    "axios": "1.3.5",
    "bitcore-lib-cash": "10.0.2"
  },
  "devDependencies": {
    "apidoc": "0.54.0",
    "chai": "4.3.7",
    "husky": "8.0.3",
    "lodash.clonedeep": "4.5.0",
    "minimal-slp-wallet": "5.8.8",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "semantic-release": "19.0.5",
    "sinon": "15.0.3",
    "standard": "17.0.0"
  },
  "release": {
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
